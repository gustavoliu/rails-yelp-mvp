<h1>Restaurants#index</h1>
<p>Find me in app/views/restaurants/index.html.erb</p>

<div>
  <%= link_to 'Add a new restaurant', new_restaurant_path %>
</div>

<div class="container">
  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col col-xs-6 col-xs-offset-3">
        <h2><%= link_to restaurant.name, restaurant %></h2>
        <h3><%= restaurant.address %></h3>
        <h4><%= restaurant.phone_number %></h4>
        <h4><%= restaurant.category %></h4>
      </div>
    <% end %>
  </div>
</div>
